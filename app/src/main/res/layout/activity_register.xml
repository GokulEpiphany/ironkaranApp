<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    tools:ignore="MissingPrefix"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.ironkaran.ironkaran.activities.RegisterActivity">

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:id="@+id/registerName"
            />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Before you get started,\nPlease confirm your details"
        android:id="@+id/startingText"
        android:layout_above="@id/name"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:textColor="@color/eightySevenBlack"
        fontPath="fonts/Montserrat-Medium.ttf"

        />

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:id="@+id/phoneNumber"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Phone number"
            android:id="@+id/registerPhoneNumber"
            />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/verifybutton"
        android:textColor="@color/lightGrey"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
